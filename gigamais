  <script>
    function handleSubmit(event) {
      event.preventDefault();
      const form = event.target;
      const requiredFields = [
        'nome', 'cpf', 'rg', 'nascimento', 'email', 'telefone1',
        'rua', 'numero', 'bairro', 'cidade', 'plano'
      ];
      for (let field of requiredFields) {
        if (!form[field].value.trim()) {
          alert(`Por favor, preencha o campo: ${form[field].placeholder || field}`);
          form[field].focus();
          return;
        }
      }
      const dados = {
        nome: form.nome.value,
        cpf: form.cpf.value,
        rg: form.rg.value,
        nascimento: form.nascimento.value,
        email: form.email.value,
        telefone1: form.telefone1.value,
        telefone2: form.telefone2.value,
        rua: form.rua.value,
        numero: form.numero.value,
        bairro: form.bairro.value,
        cidade: form.cidade.value,
        complemento: form.complemento.value,
        plano: form.plano.value
      };
      const texto = `Novo Cadastro MJ TELECOM:%0A` +
        `Nome: ${dados.nome}%0A` +
        `CPF: ${dados.cpf}%0A` +
        `RG: ${dados.rg}%0A` +
        `Data de nascimento: ${dados.nascimento}%0A` +
        `E-mail: ${dados.email}%0A` +
        `Telefone 1: ${dados.telefone1}%0A` +
        `Telefone 2: ${dados.telefone2}%0A` +
        `Endereço: Rua ${dados.rua}, Nº ${dados.numero}, Bairro ${dados.bairro}, Cidade ${dados.cidade}, Complemento: ${dados.complemento}%0A` +
        `Plano desejado: ${dados.plano}`;
      const whatsappLink = `https://wa.me/5513991806947?text=${texto}`;
      window.open(whatsappLink, '_blank');
      alert("Cadastro enviado para o WhatsApp da MJ TELECOM!");
      form.reset();
    }
  </script>
